import random
n =int(input('Matrisin ölçüsünü daxil edin='))
A = [[random.randint(1, 100) for _ in range(n)] for _ in range(n)]
for row in A:
  print(row)
for i in range(len(A)):
    for j in range( len(A[0])):
        if i == j:
            A[i][j] = 2
        else:
            A[i][j] = 0
for row in A:
        print(row)
